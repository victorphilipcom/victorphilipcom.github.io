<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Confetti Celebration</title>
  <style>
    body {
      margin: 0;
      padding: 0;
    }
    /* Ensure the canvas covers the page */
    canvas {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
    }
    /* Style for the button container */
    .button-container {
      position: fixed;
      top: 20px;
      left: 20px;
      z-index: 10;
    }
  </style>
</head>
<body>
  <div class="button-container">
    <button id="confettiButton">Celebrate!</button>
  </div>

  <!-- Load the canvas-confetti library from a CDN -->
  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
  <script>
    // Fire confetti on page load
    confetti({
      particleCount: 100,
      spread: 70,
      origin: { y: 0.6 }
    });

    // Function to launch confetti when called
    function launchConfetti() {
      confetti({
        particleCount: 100,
        spread: 70,
        origin: { y: 0.6 }
      });
    }

    // Trigger confetti when the button is clicked
    document.getElementById('confettiButton').addEventListener('click', launchConfetti);
  </script>
</body>
</html>
